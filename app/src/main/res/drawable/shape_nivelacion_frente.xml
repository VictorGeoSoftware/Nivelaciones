<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
        <shape>
            <solid
                android:color="#FF5882FA" />
            <corners
                android:topLeftRadius="5dip"
                android:topRightRadius="5dip" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFCEE3F6"/>
            <corners
                android:bottomLeftRadius="5dip"
                android:bottomRightRadius="5dip" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>
